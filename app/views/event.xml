<Alloy>
	
    <NavigationWindow id="eventNavigationWindow" platform="ios">
        <Window id="eventWindow">
        	<View id="logoContainer"></View>
        	<View id="flagsContainer">
        		<ImageView id="langES" class="langIcon" image="/icons/es.png" onClick="switchToES"></ImageView>
	    		<ImageView id="langEN" class="langIcon" image="/icons/en.png" onClick="switchToEN"></ImageView>
	    		<ImageView id="langPT" class="langIcon" image="/icons/pt.png" onClick="switchToPT"></ImageView>
        	</View>
            <ScrollView id="eventScrollView">
                <View id="eventView"></View>
                
                <View class="padding"></View>                
            </ScrollView>
            <View id="tabContainer"></View>
        </Window>
    </NavigationWindow>
    
    <Window id="eventNavigationWindow" platform="android">
    	<View id="logoContainer"></View>
    	<View id="flagsContainer">
    		<ImageView id="langES" class="langIcon" image="/icons/es.png" onClick="switchToES"></ImageView>
    		<ImageView id="langEN" class="langIcon" image="/icons/en.png" onClick="switchToEN"></ImageView>
    		<ImageView id="langPT" class="langIcon" image="/icons/pt.png" onClick="switchToPT"></ImageView>
    	</View>
        <ScrollView id="eventScrollView">
            <View id="eventView"></View>
            
            <View class="padding"></View>
        </ScrollView>
        <View id="tabContainer"></View>    
    </Window>
    
</Alloy>